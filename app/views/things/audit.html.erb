<div class = "row">
  <div class = "col-md-12">
    <div class = "panel panel-primary">
      <div class = "panel-heading" align = center>
        <p class = "title1">申请代售商品列表</p>
      </div>
      <div class = "panel-body" style = "height: 640px">
        <table class="table table-hover">
          <thead>
            <tr class = "info">
              <th class = "text1">订单号</th>
              <th class = "text1">卖家昵称</th>
              <th class = "text1">商品</th>
              <th class = "text1">类型</th>
              <th class = "text1">成新率</th>
              <th class = "text1">价格</th>
              <th class = "text1">确认交付</th></th>
              <th class = "text1">关闭交易</th>
              <th class = "text1">查看详细信息</th>
            </tr>
          </thead>
    
          <tbody style = "background-color: white">
            <% @things.each do |thing| %>
            <tr>
              <td class = "text1"><%= thing.id %></td>
              <td class = "text1"><%= User.find(thing.user_id).name %></td>
              <td class = "text1"><%= thing.title %></td>
              <td>
                <% case thing.style %>
                <% when 1 then %>
                <p class = "text1">家用电器</p>
                <% when 2 then %>
                <p class = "text1">数码产品</p>
                <% when 3 then %>
                <p class = "text1">衣物</p>
                <% when 4 then %>
                <p class = "text1">清洁用品</p>
                <% when 5 then %>
                <p class = "text1">办公用品</p>
                <% when 6 then %>
                <p class = "text1">床上用品</p>
                <% when 7 then %>
                <p class = "text1">书籍</p>
                <% end %>
              </td>
              <td>
                <% case thing.depreciation_rate %>
                <% when 1 then %>
                <p class = "text1">全新</p>
                <% when 2 then %>
                <p class = "text1">九九成新</p>
                <% when 3 then %>
                <p class = "text1">九成新</p>
                <% when 4 then %>
                <p class = "text1">七五成新</p>
                <% when 5 then %>
                <p class = "text1">六成新</p>
                <% when 6 then %>
                <p class = "text1">五成新</p>
                <% when 7 then %>
                <p class = "text1">三成新</p>
                <% end %>
              </td>
              <td class = "text1"><%= thing.price %></td>
              <td>
                <% if thing.delivery == false %>
                <%= button_to "确认交付", refresh_path(thing), :action => "refresh", :method => "patch", :params => {"thing[delivery]" => true}, :class => "btn btn-warning" %>
                <% else %>
                <input type = "button" class = "btn btn-success" value = "已交付" disabled = "disabled">
                <% end %>
              </td>
              <td>
                <%= button_to "确认售出", delete_path(thing), :action => "delete", :method => "delete", :class => "btn btn-warning" %>
              </td>
              <td>
                <%= link_to "查看详细信息", thing_path(thing), :class => "btn btn-link" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
