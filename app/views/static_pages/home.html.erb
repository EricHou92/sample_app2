<% provide(:title,"主页") %>
<div class="center jumbotron">
  <h1>欢迎来到 果壳大二手 交易平台</h1>
  <h2>
      这里是国科大新老生二手交易
      <a href="https://market.douban.com/">集市</a>
      果壳大二手.
  </h2>
  <%= link_to "马上 注册 ！", signup_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "已有账户 ？ 登录 ！", login_path, class: "btn btn-lg btn-primary" %>
  <br/><br/><br/>

  <div class = "row">
    <div class = "col-md-12">
      <div class = "panel panel-primary">
        <div class = "panel-heading" align = center>
          <p class = "title1">正在出售商品列表</p>
        </div>
        <div class = "panel-body" style = "height: 640px">
          <table class="table table-hover">
            <thead>
              <tr class = "info">
                <th class = "text1">卖家昵称</th>
                <th class = "text1">商品</th>
                <th class = "text1">类型</th>
                <th class = "text1">成新率</th>
                <th class = "text1">价格</th>
                <th class = "text1">查看详细信息</th>
              </tr>
            </thead>
      
            <tbody style = "background-color: white">
              <% @things.each do |thing| %>
              <tr>
                <td class = "text1"><%= User.find(thing.user_id).name %></td>
                <td class = "text1"><%= thing.title %></td>
                <td>
                  <% case thing.style %>
                  <% when 1 then %>
                  <p class = "text1">家用电器</p>
                  <% when 2 then %>
                  <p class = "text1">数码产品</p>
                  <% when 3 then %>
                  <p class = "text1">衣物</p>
                  <% when 4 then %>
                  <p class = "text1">清洁用品</p>
                  <% when 5 then %>
                  <p class = "text1">办公用品</p>
                  <% when 6 then %>
                  <p class = "text1">床上用品</p>
                  <% when 7 then %>
                  <p class = "text1">书籍</p>
                  <% end %>
                </td>
                <td>
                  <% case thing.depreciation_rate %>
                  <% when 1 then %>
                  <p class = "text1">全新</p>
                  <% when 2 then %>
                  <p class = "text1">九九成新</p>
                  <% when 3 then %>
                  <p class = "text1">九成新</p>
                  <% when 4 then %>
                  <p class = "text1">七五成新</p>
                  <% when 5 then %>
                  <p class = "text1">六成新</p>
                  <% when 6 then %>
                  <p class = "text1">五成新</p>
                  <% when 7 then %>
                  <p class = "text1">三成新</p>
                  <% end %>
                </td>
                <td class = "text1"><%= thing.price %></td>
                <td>
                  <%= link_to "查看详细信息", thing_path(thing), :class => "btn btn-link" %>
                </td>
              </tr>
              <% end %>
            </tbody>

          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to image_tag("ucas.jpg", alt: "Rails logo"),
'http://www.ucas.ac.cn/' %>